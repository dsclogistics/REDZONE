@model REDZONE.Models.ExecutiveSummaryViewModel

@{
    ViewBag.Title = "Building Summary";
}

<style>
    .headerRow {
        padding: 4px;
        font-weight: bold;
        width: 98%;
        margin-left: 1px;
    }

    .buildingRow {
        padding: 1px;
        border-bottom: 1px solid #f1f1f1;
        width: 98%;
        margin-left: 1px;
    }

        .buildingRow:hover {
            background-color: #f1f1f1;
        }

    .buildingCol {
        border-right: 1px dashed #f1f1f1; /*#f1f1f1*/
        text-align: center;
        padding: 2px;
    }
</style>


