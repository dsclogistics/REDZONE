@model REDZONE.Models.BuildingSummaryViewModel1
@{
    ViewBag.Title = "Building Summary";
    int colCounter = 0;
    int PRIORITY_ROWS = 4;
    int priorityRowCounter = 0;
}
<link href="~/Content/RedZoneApp.css" rel="stylesheet" />
<link href="~/Content/BuildingSummary.css" rel="stylesheet" />
<link href="~/Content/RZ_Effects.css" rel="stylesheet" />
<script src="~/Scripts/aes.js"></script>
<script src="~/Scripts/aes-ctr.js"></script>
<script src="~/Scripts/BuildingSummary.js"></script>
<style>
    .divCell {
        display: table-cell;
        vertical-align: middle;
    }
    .btnFlip:hover {
        cursor: pointer;
    }
    .dataHdrCol01, .dataHdrCol02, .dataHdrCol03, .dataHdrCol04 {
        border-top: 3px solid black !important;
    }
    .dataFootCol01, .dataFootCol02, .dataFootCol03, .dataFootCol04 {
        border-bottom: 3px solid black !important;
    }
    .dataHdrCol04, .dataGoalCol04, .dataValCol04, .dataFootCol04 {
        border-right: 3px solid black !important;
    }
</style>

<div class="row" style="font-family:Arial; margin-top: 5px">
    <div>
        <input type="hidden" id="buildingName" value="@Model.bName" />
        <input type="hidden" id="buildingYear" value="@Model.year" />
        <input type="hidden" id="buildingId" value="@Model.bId" />
        <input type="hidden" id="cellIdSelected" value="" />
        <input type="hidden" id="reviewerMetrics" value="@ViewBag.ReviewerMetrics" />
    </div>
    <div class="panel panel-default" style="margin-bottom:0px; ">
        <div class="panel-heading" style="text-align:center; padding: 0px 15px; ">
            <div class="row">
                <div class="col-sm-2" style="text-align:left; padding:0; padding-left:10px">
                  @if (Model.canFilterBuildings)
                  {
                    <div style="margin:0; padding:0; margin-top:38px">
                        <label class="switch btn-wait" style="display:inline-block; margin:0;">
                            <input class="switch-input" id="chkMyBuildingsOnly" type="checkbox" @Model.applyFilter />
                            <span class="switch-label" data-on="Y" data-off="N"></span>
                            <span class="switch-handle"></span>
                        </label>
                        <span class="" style="font-size:12px; margin:0; padding:0; padding-top:5px; display:inline-block">View my Buildings Only</span>
                    </div>
                  }
                </div>
                <div class="col-sm-8">
                    <div class="row ">
                        <span style="font-size:x-large; font-weight:bold; color:darkblue">Monthly Building Summary</span>
                    </div>
                    @* <----------- Navigation Field by Building*@
                    <div class="row" style="margin-bottom:3px">
                        <div class="input-group col-sm-10 col-sm-offset-1" style="padding:0px; ">
                            <span class="input-group-btn">
                                <button id="btn-lastmonth" type="button" class="btn btn-primary btn-wait" style="float:right; width:60px" onclick="location.href='@Model.urlPrevBuilding'" title="Navigate to Previous Building" @Model.statusPrevBuilding>
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </button>
                            </span>
                            <input type="text" class="form-control" value="@Model.bName" readonly="readonly" style="min-width:100%; text-align:center; font-weight:bold; font-size:x-large; padding:0px">
                            <span class="input-group-btn">
                                <button id="btn-nextmonth" type="button" class="btn btn-primary btn-wait" style="float:right; width:60px" onclick="location.href='@Model.urlNextBuilding'" title="Navigate to Next Building" @Model.statusNextBuilding>
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </button>
                            </span>
                        </div>
                    </div>@* <----------- End of Navigation Field by Building*@
                    @* <----------- Navigation Field by Year *@
                    <div class="row" style="margin-bottom:10px; padding:0px;">
                        <div class="input-group col-sm-10 col-sm-offset-1" style="padding:0px;">
                            <span class="input-group-btn" style="padding:0px;">
                                <button id="btn-lastmonth" type="button" class="btn btn-primary btn-wait" style="float:right; width:60px;" onclick="location.href='@Model.urlPrevPeriod'" title="Navigate to Previous Year" @Model.statusPrevPeriod>
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </button>
                            </span>
                            @*<span style="min-width:100%; text-align:center; vertical-align:middle; font-size:large; padding:0px">Period: @Model.year</span>*@
                            <input type="text" class="form-control" value="@Model.year" readonly="readonly" style="min-width:100%; text-align:center; font-weight:bold; font-size:large; padding:0px">
                            <span class="input-group-btn">
                                <button id="btn-nextmonth" type="button" class="btn btn-primary btn-wait" style="float:right; width:60px;" onclick="location.href='@Model.urlNextPeriod'" title="Navigate to Next Year" @Model.statusNextPeriod>
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </button>
                            </span>
                        </div>
                    </div>@* <----------- End of Navigation Field by Year *@
                </div>
                <div class="col-sm-2">
                    @*<input type="image" src="~/Images/BackToDashboard.png" width="80" height="35" style="float:right" onclick="javascript:location('/Home/Index')">*@
                </div>
            </div>
        </div> <!-- END OF PANEL HEADER -->

        <div class="panel-body" style="margin:2px; padding:5px; background-color: #fefefe">
          @if (Model.metricRows.Count == 0)
          {
              <div style="color:red; padding: 50px 5px; font-weight:bold">
                   THERE IS NO METRICS DATA AVAILABLE FOR THE<br />
                   SELECTED PERIOD / BUILDING CONBINATION
              </div>
          }
          else if (Model.isModelValid)
          {
            <div>
                <input type="hidden" id="viewMode" value="byMetric" />
            </div>

            <!-- ***************************************************************************************** -->
            <!-- **********************************   MONTH VIEW ***************************************** -->
            <!-- ***************************************************************************************** -->
            <div class="row" id="viewByMonth" style="border:1px solid lightgray; border-radius: 5px; margin: 0; padding:0; @Model.monthViewMode ">
                <table class="metricTable" style="width:100%;">
                    <tr class="rowHeader">
                        <!-- ******* HEADERS/TITLES ROW ********* -->
                        <td style="width:14.99%; min-width:180px; border-bottom:3px solid black;">
                            <span class="btnFlip" style="float:right; padding:1.5px; ">
                                <span style="color: darkgray; font-size:12px">Switch Rows to Columns</span>
                                <img style="margin-left:3px" src="~/Images/ChangeView.png" title="Pivot Table Data" />
                            </span>
                        </td>
                        <td style="width:8.33%; background-color: #bbedff; border-bottom:3px solid black">
                            Goal
                        </td>
                        @{colCounter = 0;}
                        @foreach (REDZONE.Models.MeasuredCellEntity dscBldngHdr in @Model.buildingHeadings.entityMetricCells)
                        {
                            if (dscBldngHdr.isViewable)
                            {
                                <td style="border-bottom:3px solid black; width:@Model.metricColWidth">
                                    <input type="hidden" id="month-@colCounter.ToString("00")" value="@dscBldngHdr.metricMonth" />
                                    @dscBldngHdr.metricName
                                    @if (@dscBldngHdr.cellStatus.Equals("Mixed") || @dscBldngHdr.cellStatus.Equals("Open"))
                                    {
                                        <span style="color:red">*</span>
                                    }
                                </td>
                            }
                            colCounter++;
                        }
                        <td style="width:10%; border-bottom:3px solid black; ">
                            Goals Missed
                        </td>
                    </tr>  <!-- END OF HEADERS/TITLES ROW -->

                    <!-- =========================================================================================================== -->
                    <!-- ================== Begin loop sections of Building Metric Rows ============================================ -->
                    @foreach (var buildingRow in Model.metricRows)
                    {
                        colCounter = 0;
                        priorityRowCounter++;  // priorityRowL
                        string priorityRowCellStyleFirst = "";
                        string priorityRowCellStyleLast = "";
                        string priorityRowCellStyle = "";
                        if (priorityRowCounter <= PRIORITY_ROWS) {
                            priorityRowCellStyleFirst = "border-left: 3px solid black; ";
                            priorityRowCellStyleLast = "border-right: 3px solid black; ";
                            if (priorityRowCounter == PRIORITY_ROWS) {
                                priorityRowCellStyleFirst = "border-left: 3px solid black; border-bottom: 3px solid black;";
                                priorityRowCellStyleLast = "border-right: 3px solid black; border-bottom: 3px solid black;";
                                priorityRowCellStyle = "border-bottom: 3px solid black;"; 
                            }  //This is the last Priority Row
                        }  //This is a Priority Row
                        
                        <tr class="buildingRow">
                            <td style="width:14.99%; min-width:180px; font-weight:bold; @priorityRowCellStyleFirst" >
                                <a href="@buildingRow.rowURL" id="mName" title="Metric Owner: @buildingRow.rowOwner">@buildingRow.rowName</a>
                            </td> <!-- Metric Name Column -->
                            <td style="width:8.33%; background-color: #bbedff; color:blue; font-weight:bold; @priorityRowCellStyle" >
                                <span id="mGoal">@HttpUtility.HtmlDecode(buildingRow.scoreGoal)</span>
                            </td> <!-- Goal Column -->
                            @foreach (REDZONE.Models.MeasuredCellEntity buildingCell in buildingRow.entityMetricCells)
                            {
                                bool cellIsViewable = Model.buildingHeadings.entityMetricCells[colCounter].isViewable;
                                if (cellIsViewable)
                                {
                                    string hasReasonsClass = (buildingCell.hasReasons) ? "note" : "";
                                    <td id="@buildingCell.cellValueId" class="valueCell @buildingCell.displayClass " style="padding:0; width:@Model.metricColWidth; @priorityRowCellStyle" title="Right Click any cell to Add/Edit Reasons and Action Plans [STS: @buildingCell.cellStatus - @buildingCell.rz_bapm_status]">
                                        <div class="@hasReasonsClass mvCell" style="margin:0; padding:4px; ">
                                            <input type="hidden" id="mpId" value="@buildingCell.mtrc_period_id" />
                                            <input type="hidden" id="mDisplayClass" value="@buildingCell.displayClass" />
                                            <input type="hidden" id="colIndex" value="month-@colCounter.ToString("00")" />
                                            <input type="hidden" id="bamp_status" value="@buildingCell.rz_bapm_status" />
                                            <input type="hidden" id="bapm_id" value="@buildingCell.rz_bapm_id" />
                                            <input type="hidden" id="hasReasons" value="@hasReasonsClass" />
                                            <input type="hidden" id="periodStatus" value="@buildingCell.cellStatus" />
                                            @*@Model.metricColWidth*@
                                            @if (String.IsNullOrEmpty(@buildingCell.metricValue))
                                            { <br /> }
                                            else
                                            { <span id="mValue">@buildingCell.metricValue </span>}
                                        </div>
                                    </td>
                                }
                                colCounter++;
                            }
                            <td class="scoreCol @buildingRow.displayClass " style="width:10%; color:black; font-weight:bold; @priorityRowCellStyleLast">
                                @buildingRow.redTotals
                            </td>
                        </tr>
                    }  @*  <------- End of BuildingRow Rows Section ---- *@


                    <!--  ************ Start of the TOTALS ROW ******************  -->
                    <tr class="buildingRow totalsRow">
                        <td style="width:14.99%; min-width:180px; padding:0; padding-top:4px">
                            @*@Model.buildingScoreRow.rowName*@
                            <span style="margin-top:10px; padding-top:10px">Building Score</span>
                            <button type="button" class="btn  btn-sm btnActionsRequired" style="padding:0px; padding-left:5px; background-color:transparent; color: darkgreen " title="Show Actions Required by Building Score">
                                <span class="glyphicon glyphicon-question-sign" style="font-size:large;"></span>
                            </button>
                        </td><!-- Metric Name Column -->
                        <td style="width:8.33%; ">
                            <br />
                        </td><!-- Goal Column -->
                        @foreach (REDZONE.Models.MeasuredCellEntity buildingCell in Model.buildingScoreRow.entityMetricCells)
                        {
                            if (buildingCell.isViewable)
                            {
                                <td class="@buildingCell.displayClass" style="border-bottom: 1px solid lightgray; width:@Model.metricColWidth">
                                    @if (String.IsNullOrEmpty(@buildingCell.metricValue))
                                    { <br /> }
                                    else
                                    { @buildingCell.metricValue }
                                </td>
                            }
                        }
                        <td class="scoreCol" style="width:10.00%;">
                            <br />
                        </td>
                    </tr> <!-- End of Total Goals Missed Data Section -->

                </table>
            </div> <!-- End of DIV Table Table -->


            <!-- ***************************************************************************************** -->
            <!-- **********************************   METRIC VIEW ***************************************** -->
            <!-- ***************************************************************************************** -->
            <!-- Render Partial View with Table ordered by Metrics on Top -->
            <div class="row" id="viewByMetric" style="border:1px solid lightgray; border-radius: 5px; margin: 0; padding:0; @Model.summaryByMetric.viewMode">
                @Html.Partial("_BuildingSummaryMetric", Model.summaryByMetric)
            </div> <!-- End of DIV Table Table -->

            <div class="row" id="viewWait" style="border:1px solid lightgray; border-radius: 5px; margin: 0; padding:0; height:350px; background-color:#ececec; display:none ">
                <div style="margin-top: 120px; font-size: 20px; color: blue">
                      Loading Data...
                      <br /><br />
                    <img src="~/Images/ui-anim_basic_16x16.gif" />
                </div>
            </div> <!-- End of DIV Table Table -->


            <!-- **Per New Requirements 04/07/2017, Action Plans are no longer needed. Below Section can be uncommented if they need to be displayed again ****  -->
