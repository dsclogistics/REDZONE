                            @*<div style="text-align:left;color:gray">Reviewed By: @actionPlan.reviewedBy</div>
                        </div>*@
                    }
                </div>
            }
            else
            {
                <h4 style="text-align:left">Action Plan</h4>
                <div class="bordered" style="padding:15px">
                    <span>There is no action plan to display.</span>
                </div>
            }
        </div>

    </div>
</div>

