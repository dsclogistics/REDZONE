@model REDZONE.Models.RZ_Metric
@{ ViewBag.Title = "Volume Metric"; }


<div class="row" style="text-align:center">
    <h2>@Model.metricDesc</h2>
</div>


<div class="row">
    <div class="col-sm-1 col-sm-offset-2" style="border:1px solid darkgray; padding:0">
        <input type="button" value="<<" style="float:left; width:100%" />
    </div>
    <div class="col-sm-6" style="border:1px solid darkgray; height:30px; text-align:center">
        @Model.period_Name
    </div>
    <div class="col-sm-1" style="border:1px solid darkgray; padding:0">
        <input type="button" value=">>" style="float:right; width:100%" />
    </div>
</div>

<div>


</div>



<div class="row" @*style="text-align:center"*@>
    <table class="table table-bordered table-condensed table-hover table-responsive ">
        <tr>
            <th>Building Name</th>
            <th>Value</th>
            <th>Code</th>
        </tr>

        @foreach (REDZONE.Models.Building dscBldng in Model.buildingList)
        {
            <tr>
                <td>@dscBldng.buildingName</td>
                <td>
                    @if (dscBldng.isEditable) { 
                    <input type="text" value="@dscBldng.buildingValue" />
                    }
                    else
                    {
                        <span>@dscBldng.buildingValue</span>
                    }
                </td>
                <td>@dscBldng.buildingCode</td>
            </tr>
        }
    </table>

</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
