@model REDZONE.Models.TeamActivitiesViewModel 

@{
    ViewBag.Title = "My Team's Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Tasks_TeamActivities.js"></script>

